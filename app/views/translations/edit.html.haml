%h1.text-center
  Edit Translation

.row
  .col-md-3
  .col-md-6
    .panel.panel-primary
      .panel-heading
        %h4
          =@translation.translation_key.name
      .panel-body
        #translations_form
          .row
            .col-sm-12
              = simple_form_for @translation, url: simple_translation_engine.translation_path, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |t|
                = t.input :key, readonly: true, as: :hidden, :input_html => { :value => @translation.translation_key.name}
                = t.input :locale, readonly: true, :input_html => { :value => @translation.locale.name }
                = t.input :value, input_html: {rows: 10}

      .panel-footer.panel-primary
        %center 
          = button_tag id:'save_translation', type: 'submit', class: "btn action-button btn-primary" do
            = "Save"

:javascript
  $('#save_translation').on('click', function(){
    $('#translations_form form').submit();
  });
